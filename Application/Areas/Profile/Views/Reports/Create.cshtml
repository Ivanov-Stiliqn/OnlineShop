@model CreateReportViewModel

@{
    ViewData["Title"] = "Submit Report";
}

<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content text-center">
                <h2>Submit Report</h2>
                <div class="page_link">
                    <a asp-controller="Home" asp-action="Index">Home</a>
                    <a asp-controller="Reports" asp-action="Create" asp-route-userId="@Model.ReportedUserId">Submit Report</a>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="login_box_area p_120">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="login_form_inner">
                    <h3>Please fill out the form.</h3>
                    <form class="row login_form" method="post" id="contactForm">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="col-md-12 form-group">
                            <label asp-for="@Model.Details"></label>
                            <textarea rows="5" class="form-control" asp-for="@Model.Details" placeholder="Tell us what was wrong ?"></textarea>
                            <span asp-validation-for="@Model.Details" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group mt-3">
                            <button type="submit" value="submit" class="btn submit_btn">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


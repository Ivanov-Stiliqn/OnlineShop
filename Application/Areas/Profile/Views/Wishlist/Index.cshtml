@model ICollection<WishlistViewModel>

<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content text-center">
                <h2>Shopping Cart</h2>
                <div class="page_link">
                    <a asp-area="Shopping" asp-controller="Products" asp-action="Index">Home</a>
                    <a asp-controller="Wishlist" asp-action="Index">Wishlist</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->
<!--================Cart Area =================-->
<section class="cart_area">
    <div class="container">
        @if (Model.Any())
        {
            <div class="cart_inner">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Product</th>
                                <th scope="col">Sizes</th>
                                <th scope="col">Price</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <partial name="_WishlistProduct" model="@product" />
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {
            <h2 class="text-center">No products in your wishlist, yet.</h2>
        }
    </div>
</section>


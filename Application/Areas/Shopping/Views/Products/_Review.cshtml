@model ReviewViewModel

<div class="review_item">
    <div class="media">
        <div class="d-flex">
            <img width="70" height="70" src="@Model.Image" alt="">
        </div>
        <div class="media-body">
            <h4>@Model.User</h4>
            @for (int i = 0; i < Model.Stars; i++)
            {
                <span>⭐</span>
            }
        </div>
    </div>
    <p>@Model.Comment</p>
</div>
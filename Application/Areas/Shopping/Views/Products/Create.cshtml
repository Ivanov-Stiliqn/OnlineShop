@model CreateProductViewModel

@{
    ViewData["Title"] = "Create Product";
}

<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content text-center">
                <h2>Create Product</h2>
                <div class="page_link">
                    <a asp-controller="Home" asp-action="Index">Home</a>
                    <a asp-controller="Products" asp-action="Create">Create Product</a>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="login_box_area p_120">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="login_form_inner">
                    <h3>Please fill out the form.</h3>
                    <form method="post" enctype="multipart/form-data" class="row login_form">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="col-md-12 form-group">
                            <label asp-for="@Model.Price"></label>
                            <input class="form-control" asp-for="@Model.Price" placeholder="Price...">
                            <span asp-validation-for="@Model.Price" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input class="form-control" asp-for="@Model.Name" placeholder="Name...">
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input class="form-control" asp-for="@Model.Color" placeholder="Color..." />
                            <span asp-validation-for="@Model.Color" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <select class="form-control" asp-for="@Model.Sex">
                                <option disabled selected>Sex</option>
                                <option value="1">Men</option>
                                <option value="2">Women</option>
                                <option value="3">Kids</option>
                            </select>
                            <span asp-validation-for="@Model.Sex" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <select class="form-control" asp-for="@Model.CategoryId">
                                <option disabled selected>Category</option>
                                @foreach (var category in Model.AllCategories)
                                {
                                    <option class="form-control" value="@category.Id">@category.Name</option>
                                }
                            </select>
                            <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 form-group">
                            <textarea class="form-control" asp-for="@Model.Description" placeholder="Description..."></textarea>
                            <span asp-validation-for="@Model.Description" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <textarea class="form-control" asp-for="@Model.Details" placeholder="Details..."></textarea>
                            <span asp-validation-for="@Model.Details" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 form-group">
                            <input asp-for="@Model.Images" class="form-control-file" style="height: 35px!important" multiple>
                            <small id="fileHelp" class="form-text text-muted">Choose images for your product to be uploaded.</small>
                        </div>
                        <div class="col-md-12 form-group mt-3 mb-3">
                            <button type="submit" value="submit" class="btn submit_btn">Create</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

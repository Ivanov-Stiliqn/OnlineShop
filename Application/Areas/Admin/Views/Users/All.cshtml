@model ICollection<UserViewModel>
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content text-center">
                <h2>All Users</h2>
                <div class="page_link">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a asp-controller="Users" asp-action="All">All Users</a>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="login_box_area m-5">
    <div class="row">
        <div class="col-lg-12">
            <div class="login_form_inner">
                <form class="row login_form float-left" method="get" id="contactForm">
                    <div class="col-md-12 form-group">
                        <input type="text" name="search" placeholder="Username">
                        <button type="submit" value="submit" class="btn btn-danger">Search</button>
                    </div>
                </form>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Username</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <partial name="_User" model="@user" />
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>